<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvvmShellCalc.MainPage"
             xmlns:ViewModel="clr-namespace:MvvmShellCalc.ViewModels"
             x:DataType="ViewModel:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout
            BindingContext="{Binding VerticalStackLayout}"
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label Text="stupid calculator" FontSize="30" HorizontalOptions="Center" />
            <Button Text="register" BindingContext="{Binding registerButton}" Command="{Binding registerCommand}" HorizontalOptions="Center"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
